{
  "manifest_version": 3,
  "name": "TikTok Login Bypass",
  "version": "0.1",
  "author": "Jonathan Simmons",

  "description": "Allows opening a TikTok video on mobile without needing to log in",

  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["tiktok-login-bypass.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{3aa53768-cb55-4eaa-bccb-15a28f9c403c}",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "id": "{3aa53768-cb55-4eaa-bccb-15a28f9c403c}",
      "strict_min_version": "113.0"
    }
  }
}
